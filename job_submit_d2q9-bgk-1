#!/bin/bash

#SBATCH --nodes 1
#SBATCH --ntasks-per-node 28
#SBATCH --partition veryshort
#SBATCH --reservation=COSC026662
#SBATCH --account=COSC026662
#SBATCH --exclude compute[100,101,102,103,104]
#SBATCH --job-name d2q9-bgk
#SBATCH --time 01:00:00
#SBATCH --output d2q9-bgk-1.out
#SBATCH --exclusive
module load languages/intel/2020-u4

echo Running on host `hostname`
echo Time is `date`
echo Directory is `pwd`
echo Slurm job ID is $SLURM_JOB_ID
echo This job runs on the following machines:
echo `echo $SLURM_JOB_NODELIST | uniq`

#! Run the executable
srun --mpi=pmi2 -N 1 -n 1 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
# srun --mpi=pmi2 -N 1 ./d2q9-bgk input_128x256.params obstacles_128x256.dat
# srun --mpi=pmi2 -N 1 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
# srun --mpi=pmi2 -N 1 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat

