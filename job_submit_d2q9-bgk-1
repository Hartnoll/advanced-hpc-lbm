srun --mpi=pmi2 -N 1 -n 6 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 7 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 8 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 9 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 10 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 11 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 12 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 13 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 14 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 15 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 16 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 17 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 18 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 19 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 20 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 21 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 22 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 23 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
srun --mpi=pmi2 -N 1 -n 24 ./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat
